AddLocationForm: #
<AddLocationForm>: #
	orientation: "vertical" #
	BoxLayout:                                      # Logo and title
	    height: "50dp"
	    size_hint_y: None
	    canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            width: "150dp"
            size_hint_x: None
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:
                id: logo
                source: 'Images/logo.png'
                size: self.size
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            canvas:
                Color:
                    rgba: 0.568, 0.392, 0.804, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                font_size: "20sp"
                text: "[color=ffffff][b]Data collection tool[/b][/color]"
                markup: True
                size: self.size
                size_hint_x: None
	BoxLayout:                                  # Create project and saved projects
        height: "350dp"
	    size_hint_y: None
	    AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            Button:
                text: "xxx"
	    BoxLayout:
	        width: "350dp"
            size_hint_x: None
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: 0.294, 0.706, 0.902, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                height: "30dp"
	            size_hint_y: None
                Label:
                    font_size: "15sp"
                    text: "[color=ffffff]Saved projects[/color]"
                    markup: True
                    size: self.size
                    size_hint_x: None
            BoxLayout:
    BoxLayout:                                  # Application Log
        orientation: "vertical"
	    canvas.before:
            Color:
                rgba: 0.651, 0.651, 0.651, 1
            Rectangle:
                size: self.size
                pos: self.pos
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            height: "25dp"
            size_hint_y: None
            Label:
                font_size: "15sp"
                text: "[color=ffffff]Application log[/color]"
                markup: True
                size: self.size
        ScrollView:
            id:scrlv
            bar_width: "6dp"
            TextInput:
                size_hint: 1, None
                background_normal: 'Images/border.png'
                background_active: 'Images/border.png'
                foreground_color: 1, 1, 1, 1
                background_color: 0.651, 0.651, 0.651, 9
                height: max(self.minimum_height, scrlv.height)

